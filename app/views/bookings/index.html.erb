<div class="container">
<h1 class="text-center mb-4">My bookings</h1>

  <div class="pt-2 pb-0 pr-5 row events_index justify-content-right">
    <% @bookings.each do |booking| %>
      <div class="col-4">
        <div class="card ml-5 mb-5" >
          <% if booking.event.photo.url %>
            <%= image_tag booking.event.photo.url, class: "img-card-top" %>
          <% else %>
            <img src="https://images.unsplash.com/photo-1528712306091-ed0763094c98?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=500&q=60" class="img-card-top">
            <% end %>
        <div class="price">$ <%= booking.event.price %></div>
        <div class="card-body">
          <h5 class="card-title"><%= booking.event.type_of_event %> - <%= booking.event.type_of_meal %></h5>
          <p class="card-text"><%= booking.event.title %></p>
          <%= link_to "More details", booking.event, class: "btn btn-flat" %>
          <%= link_to "Cancel", booking, method: :delete, data: { confirm: "Are you sure?"}, class: 'btn btn-danger' %>
        </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
